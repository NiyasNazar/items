<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Salesview_activity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_pick_date_from"
            android:layout_weight="2"
            android:text="From"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="2"
            android:id="@+id/btn_pick_date_to"

            android:text="To"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

<Button
    android:id="@+id/btn_sales_view"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:text="View"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <TableLayout
        android:layout_below="@+id/lltbl"
        android:layout_marginTop="10dp"
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/table_row1"
            android:padding="10dp">

            <TextView
                android:id="@+id/name"
                android:fontFamily="serif"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="#000"
                android:text="Item"/>
            <TextView
                android:id="@+id/age"
                android:textColor="#000"
                android:fontFamily="serif"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Qty"/>
            <TextView
                android:textColor="#000"
                android:id="@+id/position"
                android:fontFamily="serif"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Rate"/>
            <TextView
            android:textColor="#000"
            android:id="@+id/address"
            android:fontFamily="serif"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Amount"/>
            <TextView
                android:textColor="#000"
                android:id="@+id/date"
                android:fontFamily="serif"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Date"/>

        </TableRow>

        <View
            android:layout_height="3dip"
            android:layout_width="match_parent"
            android:background="#ff0000"/>

        <ListView
            android:layout_below="@id/table_layout"
            android:layout_above="@+id/llb"
            android:id="@+id/records_view_sales"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp">
        </ListView>

    </TableLayout>












</LinearLayout>