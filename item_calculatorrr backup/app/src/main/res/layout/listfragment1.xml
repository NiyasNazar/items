<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ListView android:id="@+id/lista"
android:listSelector="@drawable/fragment_listselector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:drawSelectorOnTop="false"/>






    <LinearLayout

        android:id="@+id/lll"
android:layout_below="@id/lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:elevation="8dp"
            app:cardCornerRadius="3dp"
            app:cardUseCompatPadding="true"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <ImageView
                android:tint="#000"
                android:layout_marginTop="10dp"
                android:text="Add"
                android:layout_gravity="center"
                android:id="@+id/addcat"
                android:src="@drawable/ic_action_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="38dp" />

        </android.support.v7.widget.CardView>


    </LinearLayout>

</RelativeLayout>